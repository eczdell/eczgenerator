{
  "openapi": "3.0.3",
  "info": {
    "title": "PolicyXpert API",
    "description": "Comprehensive API for managing policies, compliance, quizzes, roles, audits, and reports in the PolicyXpert system.",
    "version": "1.0.0",
    "contact": {
      "email": "support@policyxpert.com"
    }
  },
  "servers": [
    {
      "url": "https://api.policyxpert.com/v1",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://auth.policyxpert.com/oauth/authorize",
            "tokenUrl": "https://auth.policyxpert.com/oauth/token",
            "scopes": {
              "read": "Read access to resources",
              "write": "Write access to resources",
              "admin": "Administrative access"
            }
          }
        }
      }
    },
    "schemas": {
      "Policy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "pol_123"
          },
          "title": {
            "type": "string",
            "example": "Data Privacy Policy"
          },
          "version": {
            "type": "string",
            "example": "1.2"
          },
          "content": {
            "type": "string",
            "example": "<p>Policy content in HTML</p>"
          },
          "status": {
            "type": "string",
            "enum": [
              "draft",
              "under_review",
              "published"
            ]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "title",
          "version",
          "status"
        ]
      },
      "ComplianceReport": {
        "type": "object",
        "properties": {
          "policy_id": {
            "type": "string",
            "example": "pol_123"
          },
          "framework": {
            "type": "string",
            "example": "GDPR"
          },
          "status": {
            "type": "string",
            "enum": [
              "compliant",
              "non_compliant"
            ]
          },
          "issues": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "section": {
                  "type": "string",
                  "example": "Section 2.1"
                },
                "description": {
                  "type": "string",
                  "example": "Missing data encryption clause"
                }
              }
            }
          }
        },
        "required": [
          "policy_id",
          "framework",
          "status"
        ]
      },
      "Quiz": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "quiz_456"
          },
          "policy_id": {
            "type": "string",
            "example": "pol_123"
          },
          "title": {
            "type": "string",
            "example": "GDPR Compliance Quiz"
          },
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "mcq",
                    "true_false",
                    "scenario"
                  ]
                },
                "text": {
                  "type": "string",
                  "example": "What is the maximum fine under GDPR?"
                },
                "options": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "example": [
                    "€10M",
                    "€20M",
                    "€50M"
                  ]
                },
                "correct_answer": {
                  "type": "string",
                  "example": "€20M"
                }
              }
            }
          }
        },
        "required": [
          "id",
          "policy_id",
          "title"
        ]
      },
      "QuizResult": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "result_789"
          },
          "quiz_id": {
            "type": "string",
            "example": "quiz_456"
          },
          "user_id": {
            "type": "string",
            "example": "user_101"
          },
          "score": {
            "type": "number",
            "example": 85
          },
          "passed": {
            "type": "boolean",
            "example": true
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "quiz_id",
          "user_id",
          "score"
        ]
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "role_001"
          },
          "name": {
            "type": "string",
            "example": "PolicyAdmin"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "read_policies",
                "write_policies",
                "approve_policies",
                "manage_users"
              ]
            },
            "example": [
              "read_policies",
              "write_policies"
            ]
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "AuditLog": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "log_321"
          },
          "user_id": {
            "type": "string",
            "example": "user_101"
          },
          "action": {
            "type": "string",
            "example": "policy_upload"
          },
          "resource_id": {
            "type": "string",
            "example": "pol_123"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "user_id",
          "action",
          "timestamp"
        ]
      },
      "Report": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "report_654"
          },
          "type": {
            "type": "string",
            "enum": [
              "compliance",
              "quiz_performance",
              "acknowledgment"
            ]
          },
          "data": {
            "type": "object",
            "additionalProperties": true
          },
          "generated_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "type",
          "generated_at"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "INVALID_REQUEST"
          },
          "message": {
            "type": "string",
            "example": "Missing required field: title"
          }
        },
        "required": [
          "code",
          "message"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Policy Management",
      "description": "Endpoints for creating, retrieving, and managing policies."
    },
    {
      "name": "Compliance Check",
      "description": "Endpoints for performing compliance scans on policies."
    },
    {
      "name": "Quiz Mode",
      "description": "Endpoints for managing quizzes and quiz results."
    },
    {
      "name": "Role-Based Access Control",
      "description": "Endpoints for managing user roles and permissions."
    },
    {
      "name": "Audit Trails",
      "description": "Endpoints for retrieving audit logs."
    },
    {
      "name": "Reporting",
      "description": "Endpoints for generating and retrieving reports."
    }
  ],
  "paths": {
    "/policies": {
      "post": {
        "summary": "Create a new policy",
        "operationId": "createPolicy",
        "tags": [
          "Policy Management"
        ],
        "security": [
          {
            "OAuth2": [
              "write"
            ]
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Policy"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Policy created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Policy"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "summary": "Retrieve list of policies",
        "operationId": "listPolicies",
        "tags": [
          "Policy Management"
        ],
        "security": [
          {
            "OAuth2": [
              "read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "draft",
                "under_review",
                "published"
              ]
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20,
              "maximum": 100
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of policies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Policy"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/policies/{policyId}": {
      "get": {
        "summary": "Get policy details",
        "operationId": "getPolicy",
        "tags": [
          "Policy Management"
        ],
        "security": [
          {
            "OAuth2": [
              "read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "policyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Policy details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Policy"
                }
              }
            }
          },
          "404": {
            "description": "Policy not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/policies/{policyId}/compliance": {
      "post": {
        "summary": "Run compliance check on a policy",
        "operationId": "checkPolicyCompliance",
        "tags": [
          "Compliance Check"
        ],
        "security": [
          {
            "OAuth2": [
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "name": "policyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "framework": {
                    "type": "string",
                    "example": "GDPR"
                  }
                },
                "required": [
                  "framework"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Compliance check result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ComplianceReport"
                }
              }
            }
          },
          "404": {
            "description": "Policy not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/quizzes": {
      "post": {
        "summary": "Create a new quiz",
        "operationId": "createQuiz",
        "tags": [
          "Quiz Mode"
        ],
        "security": [
          {
            "OAuth2": [
              "write"
            ]
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Quiz"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Quiz created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Quiz"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "summary": "List all quizzes",
        "operationId": "listQuizzes",
        "tags": [
          "Quiz Mode"
        ],
        "security": [
          {
            "OAuth2": [
              "read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "policy_id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of quizzes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Quiz"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/quizzes/{quizId}/results": {
      "post": {
        "summary": "Submit quiz results",
        "operationId": "submitQuizResult",
        "tags": [
          "Quiz Mode"
        ],
        "security": [
          {
            "OAuth2": [
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "name": "quizId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QuizResult"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Result submitted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QuizResult"
                }
              }
            }
          },
          "404": {
            "description": "Quiz not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "summary": "Get quiz results",
        "operationId": "getQuizResults",
        "tags": [
          "Quiz Mode"
        ],
        "security": [
          {
            "OAuth2": [
              "read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "quizId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user_id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of quiz results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuizResult"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Quiz not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/roles": {
      "post": {
        "summary": "Create a new role",
        "operationId": "createRole",
        "tags": [
          "Role-Based Access Control"
        ],
        "security": [
          {
            "OAuth2": [
              "admin"
            ]
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Role"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Role"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "summary": "List all roles",
        "operationId": "listRoles",
        "tags": [
          "Role-Based Access Control"
        ],
        "security": [
          {
            "OAuth2": [
              "read"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "List of roles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Role"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/audit-logs": {
      "get": {
        "summary": "Retrieve audit logs",
        "operationId": "getAuditLogs",
        "tags": [
          "Audit Trails"
        ],
        "security": [
          {
            "OAuth2": [
              "admin"
            ]
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "resource_id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "start_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of audit logs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AuditLog"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/reports": {
      "post": {
        "summary": "Generate a report",
        "operationId": "generateReport",
        "tags": [
          "Reporting"
        ],
        "security": [
          {
            "OAuth2": [
              "admin"
            ]
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "compliance",
                      "quiz_performance",
                      "acknowledgment"
                    ]
                  },
                  "filters": {
                    "type": "object",
                    "properties": {
                      "policy_id": {
                        "type": "string"
                      },
                      "user_id": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "type"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Report generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Report"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "summary": "List all reports",
        "operationId": "listReports",
        "tags": [
          "Reporting"
        ],
        "security": [
          {
            "OAuth2": [
              "read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "compliance",
                "quiz_performance",
                "acknowledgment"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Report"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}

